<h3>LISTA DE PESSOAS</h3>

<table>
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Idade</th>
        <th>Opções</th>
    </tr>
    {{#pessoas}}
    <tr>
        <th>{{id}}</th>
        <th>{{nome}}</th>
        <th>{{idade}}</th>
        <th>
            <form action="/alterar-pessoa-form" method="POST">
                <input type="hidden" name="id" value="{{id}}">
                <input type="hidden" name="nome" value="{{nome}}">
                <input type="hidden" name="idade" value="{{idade}}">
                <button type="submit" class="btn">Alterar</button>
            </form>

            <form action="/deletar-pessoa" method="POST">
                <input type="hidden" name="id" value="{{id}}">
                <button type="submit" class="btn">Deletar</button>
            </form>
        </th>
    </tr>
    {{/pessoas}}

    {{#selecionado}}
